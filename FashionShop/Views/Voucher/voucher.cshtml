
@{
    ViewBag.Title = "Voucher";
    Layout = "~/Views/Shared/MyAccount.cshtml";
}

<div class="container my-5">
    <h2 class="text-center mb-4">Danh Sách Voucher Giảm Giá</h2>

    <!-- Ô nhập mã và nút lưu -->
    <form method="post" action="@Url.Action("ThemVoucher", "Voucher")">
        <div class="d-flex justify-content-center mb-4">
            <input type="text" class="form-control w-50 mr-2" placeholder="Nhập mã voucher của bạn" name="maVoucher" id="voucherInput">
            <button type="submit" class="btn btn-primary">Lưu</button>
        </div>
    </form>

    <div class="row">
        @foreach (var voucher in ViewBag.voucherCuaToi)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-header text-center bg-info text-white">
                        <h5>@voucher.TenVoucher</h5>
                    </div>
                    <div class="card-body">
                        <p><strong>Mã:</strong> @voucher.MaVoucher</p>
                        <p><strong>Hạn sử dụng:</strong> @voucher.HanSuDung</p>
                        <p><strong>Điều kiện:</strong> @voucher.DieuKienGiam</p>
                    </div>
                    <div class="card-footer text-center">
                        <button class="btn btn-success btn-sm">Sử Dụng Ngay</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
