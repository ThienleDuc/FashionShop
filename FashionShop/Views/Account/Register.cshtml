@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_layout2.cshtml";
}

<div class="container">
    <div class="row justify-content-center align-items-center" style="height: 100vh;">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center mb-4">Đăng Ký Tài Khoản</h2>

                    @* Hiển thị thông báo lỗi nếu có *@
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger">
                            <strong>Error: </strong>@ViewBag.ErrorMessage
                        </div>
                    }

                    <form action="@Url.Action("Register", "Account")" method="post">
                        <!-- Tên đệm và Tên -->
                        <div class="mb-3">
                            <div class="row">
                                <div class="col-6">
                                    <input type="text" class="form-control" id="firstName" name="firstName" placeholder="Tên đệm" required />
                                </div>
                                <div class="col-6">
                                    <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Tên" required />
                                </div>
                            </div>
                        </div>

                        <!-- Ngày tháng năm sinh -->
                        <div class="mb-3">
                            <label for="dateOfBirth" class="form-label">Ngày Sinh</label>
                            <div class="row">
                                <div class="col-4">
                                    <select class="form-control rounded-lg" id="day" name="day" required>
                                        <option value="" disabled selected>Ngày</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select class="form-control rounded-lg" id="month" name="month" required>
                                        <option value="" disabled selected>Tháng</option>
                                    </select>
                                </div>
                                <div class="col-4">
                                    <select class="form-control rounded-lg" id="year" name="year" required>
                                        <option value="" disabled selected>Năm</option>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <!-- Giới tính -->
                        <div class="mb-3">
                            <label class="form-label">Giới tính</label>
                            <div class="row">
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="genderMale" name="gender" value="Nam" required />
                                        <label class="form-check-label" for="genderMale">Nam</label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="genderFemale" name="gender" value="Nữ" required />
                                        <label class="form-check-label" for="genderFemale">Nữ</label>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" id="genderOther" name="gender" value="Khác" required />
                                        <label class="form-check-label" for="genderOther">Khác</label>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Tên đăng nhập -->
                        <div class="mb-3">
                            <input type="text" class="form-control rounded-lg" id="username" name="username" placeholder="Tên đăng nhập" required />
                        </div>

                        <!-- Mật khẩu -->
                        <div class="mb-3">
                            <input type="password" class="form-control rounded-lg" id="password" name="password" placeholder="Mật Khẩu" required />
                        </div>

                        <!-- Nhập lại mật khẩu -->
                        <div class="mb-3">
                            <input type="password" class="form-control rounded-lg" id="confirmPassword" name="confirmPassword" placeholder="Nhập lại mật khẩu" required />
                        </div>

                        <!-- Nút đăng ký -->
                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary w-100">Đăng Ký</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
