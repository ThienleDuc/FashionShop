@{
    ViewBag.Title = "DiaChi";
    Layout = "~/Views/Shared/MyAccount.cshtml";
    ViewBag.Account = 1;
}

<div class="container-fluid">
    <div class="row align-items-center justify-content-between mb-4">
        <div class="col-auto">
            <h5 class="mb-0">Địa chỉ của tôi</h5>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-warning" id="openAddAddressModal" data-toggle="modal" data-target="#addAddressModal">
                + Thêm địa chỉ mới
            </button>
        </div>
    </div>

    @foreach (var diaChi in ViewBag.diaChiList)
    {
        <div class="card p-4 mb-3">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <div class="mb-2">
                        <h6 class="mb-0">
                            <strong>@diaChi.TenKhachHang</strong><span> | @diaChi.SDT</span>
                        </h6>
                    </div>
                    <div class="mb-2">
                        <p>@diaChi.DiaChiGiaoHang</p>
                    </div>
                </div>
                <div class="col-md-2 text-center">
                    <button type="button" class="btn btn-success" data-toggle="modal" data-target="#updateAddressModal">Cập nhật</button>
                </div>
                <div class="col-md-2 text-center">
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#deleteAddressModal">Xóa</button>
                </div>
            </div>
    </div>
    }
</div>

<!-- Modal Thêm Địa Chỉ -->
<div class="modal fade" id="addAddressModal" tabindex="-1" role="dialog" aria-labelledby="addAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAddressModalLabel">Thêm Địa Chỉ Mới</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="name">Tên</label>
                    <input type="text" class="form-control" id="name" placeholder="Nhập tên">
                </div>
                <div class="form-group">
                    <label for="phoneNumber">Số Điện Thoại</label>
                    <input type="text" class="form-control" id="phoneNumber" placeholder="Nhập số điện thoại">
                </div>

                <!-- Row for Select fields (Tỉnh, Quận, Xã) -->
                <div class="row">
                    <!-- Tỉnh / Thành phố -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="province">
                                <option value="" selected disabled>Chọn Tỉnh / Thành phố</option>
                                <!-- Add more provinces here -->
                            </select>
                        </div>
                    </div>

                    <!-- Quận / Huyện -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="district">
                                <option value="" selected disabled>Chọn Quận / Huyện</option>
                                <!-- Add more districts here -->
                            </select>
                        </div>
                    </div>

                    <!-- Xã / Phường -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="ward">
                                <option value="" selected disabled>Chọn Xã / Phường</option>
                                <!-- Add more wards here -->
                            </select>
                        </div>
                    </div>
                </div> <!-- End of Row -->

                <div class="form-group">
                    <label for="updateLocation">Địa Chỉ</label>
                    <textarea class="form-control" id="updateLocation" rows="3">@ViewBag.DiaChi</textarea>
                </div>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-warning" id="addAddress">Thêm Địa Chỉ</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Cập Nhật Địa Chỉ -->
<div class="modal fade" id="updateAddressModal" tabindex="-1" role="dialog" aria-labelledby="updateAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="updateAddressModalLabel">Cập Nhật Địa Chỉ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-group">
                    <label for="updateName">Tên</label>
                    <input type="text" class="form-control" id="updateName" value="@ViewBag.TenKhachHang">
                </div>
                <div class="form-group">
                    <label for="updatePhoneNumber">Số Điện Thoại</label>
                    <input type="text" class="form-control" id="updatePhoneNumber" value="@ViewBag.SDT">
                </div>

                <!-- Row for Select fields (Tỉnh, Quận, Xã) -->
                <div class="row">
                    <!-- Tỉnh / Thành phố -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="updateProvince">
                                <option value="" selected disabled>Chọn Tỉnh / Thành phố</option>
                                <!-- Add more provinces here -->
                            </select>
                        </div>
                    </div>

                    <!-- Quận / Huyện -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="updateDistrict">
                                <option value="" selected disabled>Chọn Quận / Huyện</option>
                                <!-- Add more districts here -->
                            </select>
                        </div>
                    </div>

                    <!-- Xã / Phường -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <select class="form-control" id="updateWard">
                                <option value="" selected disabled>Chọn Xã / Phường</option>
                                <!-- Add more wards here -->
                            </select>
                        </div>
                    </div>
                </div> <!-- End of Row -->

                <div class="form-group">
                    <label for="updateLocation">Địa Chỉ</label>
                    <textarea class="form-control" id="updateLocation" rows="3">@ViewBag.DiaChi</textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-success" id="updateAddress">Cập Nhật</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Xác Nhận Xóa -->
<div class="modal fade" id="deleteAddressModal" tabindex="-1" role="dialog" aria-labelledby="deleteAddressModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteAddressModalLabel">Xóa Địa Chỉ</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa địa chỉ này không? Thao tác này không thể hoàn tác.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Xóa</button>
            </div>
        </div>
    </div>
</div>
