
@{
    ViewBag.Title = "MatKhau";
    Layout = "~/Views/Shared/MyAccount.cshtml";
    ViewBag.Account = 1;

}

@{
    ViewBag.Title = "Đổi Mật Khẩu";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card p-4">
                <h3 class="text-center mb-4">Đổi Mật Khẩu</h3>
                <!-- Kiểm tra và hiển thị thông báo bằng JavaScript -->
                @if (TempData["ErrorMessage"] != null)
                {
                <script type="text/javascript">
                        alert(@Html.Raw(Json.Encode(TempData["ErrorMessage"])));
                </script>
                }

                @if (TempData["SuccessMessage"] != null)
                {
                <script type="text/javascript">
                     alert(@Html.Raw(Json.Encode(TempData["SuccessMessage"])));
                </script>
                }


                @using (Html.BeginForm("ThayDoiMatKhau", "MyAccount", FormMethod.Post))
                {
                    <!-- Mật khẩu cũ -->
                    <div class="mb-3">
                        <label for="oldPassword" class="form-label">Mật khẩu cũ</label>
                        <input type="password" class="form-control" id="oldPassword" name="oldPassword" required>
                    </div>

                    <!-- Mật khẩu mới -->
                    <div class="mb-3">
                        <label for="newPassword" class="form-label">Mật khẩu mới</label>
                        <input type="password" class="form-control" id="newPassword" name="newPassword" required>
                    </div>

                    <!-- Xác nhận mật khẩu mới -->
                    <div class="mb-3">
                        <label for="confirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                        <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                    </div>

                    <!-- Nút Đổi Mật Khẩu -->
                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary w-100">Đổi Mật Khẩu</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
