<style>
    .payment-options {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .payment-option {
        border: 1px solid #ccc; /* Thêm đường viền */
        border-radius: 5px; /* Bo tròn các góc */
        padding: 10px; /* Thêm khoảng cách bên trong */
        margin: 0; /* Bỏ khoảng cách mặc định giữa các phần tử */
        width: 48%; /* Mỗi lựa chọn chiếm khoảng 50% chiều rộng */
    }

        .payment-option input[type="radio"] {
            margin-right: 10px; /* Khoảng cách giữa radio button và nhãn */
        }
</style>

<script>
    // Lưu ý: đây chỉ là giả sử thôi. vui lòng sử dụng chatGPT hay bất cứ thứ j để hoành thành công việc
    function placeOrder() {
        // Giả lập kết quả đặt hàng (thành công hoặc thất bại)
        const isSuccess = Math.random() > 0.5;

        // Cập nhật nội dung thông báo
        const orderMessage = document.getElementById('orderMessage');
        if (isSuccess) {
            orderMessage.textContent = 'Đặt hàng thành công!';
            orderMessage.classList.remove('text-danger');
            orderMessage.classList.add('text-success');
        } else {
            orderMessage.textContent = 'Đặt hàng thất bại. Vui lòng thử lại.';
            orderMessage.classList.remove('text-success');
            orderMessage.classList.add('text-danger');
        }

        // Hiển thị modal
        $('#orderStatusModal').modal('show');
    }
</script>
