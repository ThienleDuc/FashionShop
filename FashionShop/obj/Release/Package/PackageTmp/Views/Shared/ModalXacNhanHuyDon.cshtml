@{
    Layout = null;
}

<!-- Modal Xác Nhận Hủy -->
<div class="modal fade" id="cancelConfirmationModal" tabindex="-1" role="dialog" aria-labelledby="cancelConfirmationModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelConfirmationModalLabel">Xác Nhận Hủy Đơn Hàng</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn hủy đơn hàng này?</p>

                <!-- Lý do hủy đơn -->
                <div class="form-group">
                    <label><strong>Lý do hủy đơn:</strong></label>
                    <!-- Radio Button -->
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="noNeed" name="cancelReason" value="noNeed" checked>
                        <label class="custom-control-label" for="noNeed">Tôi không có nhu cầu mua nữa</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="changeAddress" name="cancelReason" value="changeAddress">
                        <label class="custom-control-label" for="changeAddress">Tôi muốn đổi địa chỉ</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="changeColorSize" name="cancelReason" value="changeColorSize">
                        <label class="custom-control-label" for="changeColorSize">Tôi muốn thay đổi màu sắc, kích cỡ</label>
                    </div>
                    <div class="custom-control custom-radio">
                        <input type="radio" class="custom-control-input" id="otherReason" name="cancelReason" value="other">
                        <label class="custom-control-label" for="otherReason">Lý do khác</label>
                    </div>
                </div>

                <!-- Lý do khác (hiển thị khi chọn "Lý do khác") -->
                <div class="form-group" id="otherReasonDiv" style="display:none;">
                    <label for="otherReasonInput">Vui lòng nhập lý do:</label>
                    <input type="text" class="form-control" id="otherReasonInput" placeholder="Nhập lý do hủy">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button type="button" class="btn btn-danger">Xác Nhận Hủy</button>
            </div>
        </div>
    </div>
</div>

