
@{
    ViewBag.Title = "Chi Tiết Đơn Hàng";
    Layout = "~/Views/Shared/MyAccount.cshtml";
}

<div class="container">
    <div class="card p-4 shadow-sm">
        <!-- Phần 1: Mã Đơn Hàng, Trạng Thái và Nút Thao Tác -->
        <h3 class="mb-4">Chi Tiết Đơn Hàng #12345</h3>

        <div class="mb-4">
            <p><strong>Trạng thái:</strong> @ViewBag.TrangThai</p>
            <p><strong>Thời gian:</strong> 27/11/2024 6:50</p>
        </div>

        <div class="d-flex justify-content-between mb-4">
            @if (@ViewBag.TrangThai == "Hoàn thành")
            {
                <button class="btn btn-info" data-toggle="modal" data-target="#reorderModal">Mua Lại</button>
                <button class="btn btn-primary" data-toggle="modal" data-target="#reviewModal">Đánh Giá</button>
            }
            else if (@ViewBag.TrangThai == "Chờ xác nhận")
            {
                <button class="btn btn-danger" data-toggle="modal" data-target="#cancelConfirmationModal">Xác Nhận Hủy</button>
            }
            else
            {
                <!-- Trạng thái khác không hiển thị nút -->
            }
        </div>

        <!-- Phần 2: Địa chỉ nhận hàng -->
        <div class="mb-4">
            <h5>Địa Chỉ Nhận Hàng</h5>
            <p><strong>Họ và tên:</strong> Nguyễn Văn A</p>
            <p><strong>Địa chỉ:</strong> 123 Đường ABC, Quận 1, TP.HCM</p>
            <p><strong>Số điện thoại:</strong> 0123456789</p>
        </div>

        <!-- Phần 3: Thông tin đơn hàng và quá trình thanh toán -->
        <div class="mb-4">
            <h5>Thông Tin Đơn Hàng và Quá Trình Thanh Toán</h5>

            <!-- Chi Tiết Sản Phẩm -->
            <div class="mb-4">
                <h6>Chi Tiết Sản Phẩm</h6>
                <div class="card p-3 mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <img src="https://via.placeholder.com/80" class="img-fluid rounded" alt="Ảnh sản phẩm" style="width: 80px; height: 80px; object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <h6>Sản phẩm A</h6>
                            <p><strong>Phân loại:</strong> Màu đỏ</p>
                            <p><strong>Số lượng:</strong> 2</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <p><del>500,000</del> 400,000 VND</p>
                        </div>
                    </div>
                </div>
                <div class="card p-3 mb-3">
                    <div class="row align-items-center">
                        <div class="col-md-3 text-center">
                            <img src="https://via.placeholder.com/80" class="img-fluid rounded" alt="Ảnh sản phẩm" style="width: 80px; height: 80px; object-fit: cover;">
                        </div>
                        <div class="col-md-6">
                            <h6>Sản phẩm B</h6>
                            <p><strong>Phân loại:</strong> Màu xanh</p>
                            <p><strong>Số lượng:</strong> 1</p>
                        </div>
                        <div class="col-md-3 text-center">
                            <p><del>1,000,000</del> 800,000 VND</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Quá Trình Thanh Toán -->
            <div>
                <h6>Quá Trình Thanh Toán</h6>
                <p><strong>Tổng tiền:</strong> 1,200,000 VND</p>
                <p><strong>Voucher:</strong> 200,000 VND</p>
                <p><strong>Thành tiền:</strong> 1,000,000 VND</p>
            </div>
        </div>


        @Html.Partial("ModalXacNhanHuyDon")
        @Html.Partial("ModalMuaLai")
        @Html.Partial("ModalDanhGia")

    </div>
</div>
